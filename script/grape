#!/usr/bin/python -B

import os
import sys
import getopt

path = os.path.abspath(os.path.dirname(sys.argv[0]))
path = os.path.join(path, '..')
lib_folders = ['lib']

if not path in sys.path:
    sys.path.insert(0, path)
    
    for lib in lib_folders:
        path = os.path.join(path, lib)
    
        if not path in sys.path:
            sys.path.insert(0, path)

if __name__ == "__main__":
    if len(sys.argv) == 1:
        from app.views.qt4.layout.application import ApplicationLayout
    elif sys.argv[1] == "--gtk":
        from app.views.gtk.layout.application import ApplicationLayout
    elif sys.argv[1] == "--qt4":
        from app.views.qt4.layout.application import ApplicationLayout

    grape = ApplicationLayout()
